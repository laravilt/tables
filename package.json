{
    "name": "@laravilt/tables",
    "version": "1.0.2",
    "description": "Complete data table system with columns, filters, sorting, and actions. Build powerful tables with custom columns, bulk actions, search, and pagination for displaying and managing data.",
    "author": "Fady Mondy <info@3x1.io>",
    "license": "MIT",
    "type": "module",
    "main": "./dist/tables.umd.js",
    "module": "./dist/tables.es.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/tables.es.js",
            "require": "./dist/tables.umd.js"
        },
        "./style.css": "./dist/style.css"
    },
    "files": [
        "dist",
        "resources"
    ],
    "keywords": [
        "laravilt",
        "tables",
        "data-table",
        "vue",
        "vue3",
        "columns",
        "filters",
        "sorting",
        "pagination",
        "inertia",
        "laravel"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/laravilt/tables"
    },
    "bugs": {
        "url": "https://github.com/laravilt/tables/issues"
    },
    "homepage": "https://laravilt.dev/tables",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:types": "vue-tsc --declaration --emitDeclarationOnly --outDir dist resources/js/app.js || true",
        "build:npm": "npm run build",
        "prepublishOnly": "npm run build:npm",
        "format": "prettier --write resources/",
        "format:check": "prettier --check resources/",
        "lint": "eslint . --fix",
        "test": "npx playwright test",
        "test:headed": "npx playwright test --headed"
    },
    "peerDependencies": {
        "@inertiajs/vue3": "^2.0.0",
        "vue": "^3.3.0"
    },
    "peerDependenciesMeta": {
        "@inertiajs/vue3": {
            "optional": true
        }
    },
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@playwright/test": "^1.49.1",
        "@tailwindcss/vite": "^4.1.11",
        "@types/node": "^22.13.5",
        "@vitejs/plugin-vue": "^6.0.0",
        "@vue/eslint-config-typescript": "^14.3.0",
        "@vueuse/core": "^14.1.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-vue": "^9.32.0",
        "lucide-vue-next": "^0.555.0",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "radix-vue": "^1.9.17",
        "reka-ui": "^2.6.1",
        "tailwind-merge": "^3.4.0",
        "typescript": "^5.2.2",
        "typescript-eslint": "^8.23.0",
        "vite": "^7.0.4",
        "vue": "^3.5.13",
        "vue-tsc": "^2.2.4"
    },
    "dependencies": {
        "tailwindcss": "^4.1.1"
    }
}
